                                </div>
                            </div>

                            <form id="frmLogin" class="d-flex flex-column gap-4">
                                <!-- Email input -->
                                <div class="form-outline">
                                    <input type="email" id="form3Example3" class="form-control" />
                                    <label name="username" class="form-label" for="form3Example3">Email address</label>
                                </div>

                                <!-- Password input -->
                                <div id="passwordBox" class="form-outline d-flex justify-content-between">
                                    <input type="password" id="password" class="form-control" />
                                    <i class="bi bi-eye-slash" id="togglePassword"></i>
                                    <label class="form-label" for="password">Password</label>
                                </div>



