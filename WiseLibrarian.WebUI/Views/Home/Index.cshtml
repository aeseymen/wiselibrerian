@{
    ViewBag.Title = "Home Page";
}

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/swiper@10/swiper-bundle.min.css" />
<link href="
      https://cdnjs.cloudflare.com/ajax/libs/apexcharts/3.41.1/apexcharts.min.css
" rel="stylesheet">


<main>

    <style>
        html,
        body {
            position: relative;
            height: 100%;
        }

        body {
            background-color: cornsilk;
            font-family: Helvetica Neue, Helvetica, Arial, sans-serif;
            font-size: 14px;
            color: #000;
            margin: 0;
            padding: 0;
        }
        /* #849483
        #FFDB58*/
        .swiper {
            width: 800px;
            height: 400px;
            display: flex;
            justify-content: center;
            align-items: center;
            border: solid;
            border-inline-color: #D6BA73 /* #48260D*/;
            border-block-color: /*#D6BA73*/ #48260D;
            margin-bottom: 30px;
        }

        .swiper-slide {
            text-align: center;
            font-size: 18px;
            background: #fff;
            display: flex;
            justify-content: center;
            align-items: center;
            width: 800px;
            height: 400px;
        }

        .swiper-slide img {
            display: block;
            width: 100%;
            height: 100%;
            object-fit: cover;
        }

        .row{
            width:1230px;
            height:auto;
        }

        
    </style>

    <!-- Swiper -->
    <div class="swiper mySwiper">
        <div class="swiper-wrapper">
            <div class="swiper-slide"><img src="~/Content/images/slider_images/sliderimg1.jpg" alt="Slider1" /></div>
            <div class="swiper-slide"><img src="~/Content/images/about_page_img/spidermanreadingbook.jpg" alt="SliderSpiderman" /></div>
            <div class="swiper-slide"><img src="~/Content/images/slider_images/sliderimg2.jpg" alt="Slider2" /></div>
            <div class="swiper-slide"><img src="~/Content/images/slider_images/sliderimg3.jpg" alt="Slider3" /></div>
            <div class="swiper-slide"><img src="~/Content/images/slider_images/sliderimg4.jpg" alt="Slider4" /></div>
            <div class="swiper-slide"><img src="~/Content/images/slider_images/sliderimg5.jpg" alt="Slider5" /></div>
            <div class="swiper-slide"><img src="~/Content/images/slider_images/sliderimg6.jpg" alt="Slider6" /></div>
            <div class="swiper-slide"><img src="~/Content/images/slider_images/sliderimg7.jpg" alt="Slider7" /></div>
            <div class="swiper-slide"><img src="~/Content/images/slider_images/sliderimg8.jpg" alt="Slider8" /></div>
            <div class="swiper-slide"><img src="~/Content/images/slider_images/sliderimg9.jpg" alt="Slider9" /></div>
        </div>

        <div class="swiper-pagination"></div>
    </div>

    <div class="row d-flex align-items-center justify-content-between">
        <div class="book-chart cols-md-4" id="chart1"></div>
        <div class="member-chart cols-md-4" id="chart2"></div>
        <div class="author-chart cols-md-4" id="chart3"></div>
    </div>



</main>

<script src="https://cdn.jsdelivr.net/npm/swiper@10/swiper-bundle.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/apexcharts/3.41.1/apexcharts.min.js"></script>

@section scripts{
    
    <script src="~/Scripts/customScripts/HomeIndex.js"></script>
    
    } 



